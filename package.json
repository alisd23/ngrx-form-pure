{
  "name": "ngrx-form-pure",
  "repository": "https://github.com/alisd23/ngrx-form-pure.git",
  "author": "Ali Sheehan-Dare <alisd23@live.co.uk>",
  "license": "MIT",
  "ngPackage": {
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "workingDirectory": "./.ng_build",
    "lib": {
      "entryFile": "./src/index.ts"
    },
    "dest": "./dist"
  },
  "release": {
    "pkgRoot": "dist"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --app demo",
    "build:demo": "rimraf demo-dist && ng build --app demo",
    "build:lib": "rimraf dist && ng-packagr -p ./package.json",
    "test": "ng test --app src",
    "lint": "ng lint",
    "cypress:run": "cypress run --record",
    "demo:serve-dist": "http-server demo-dist -p 4200",
    "integration:dev": "cypress open",
    "integration:ci": "npm run build:demo && node ./scripts/integration",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "@angular/core": ">=5.0.0 <6.0.0",
    "@ngrx/store": ">=5.0.0 <6.0.0"
  },
  "devDependencies": {
    "@angular-devkit/schematics": "^0.0.42",
    "@angular/cli": "~1.6.0",
    "@angular/common": "~5.2.0",
    "@angular/compiler": "~5.2.0",
    "@angular/compiler-cli": "~5.2.0",
    "@angular/core": ">=5.0.0 <6.0.0",
    "@angular/forms": "~5.2.0",
    "@angular/http": "~5.2.0",
    "@angular/language-service": "~5.2.0",
    "@angular/platform-browser": "~5.2.0",
    "@angular/platform-browser-dynamic": "~5.2.0",
    "@angular/router": "~5.2.0",
    "@cypress/webpack-preprocessor": "^1.1.3",
    "@ngrx/store": "^5.0.0",
    "@types/highlight.js": "^9.12.2",
    "@types/jasmine": "~2.8.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~9.3.0",
    "angular-highlight-js": "^2.0.1",
    "codelyzer": "^4.1.0",
    "core-js": "^2.4.1",
    "cpr": "^3.0.0",
    "cross-spawn": "^6.0.4",
    "cypress": "^2.0.3",
    "global": "^4.3.2",
    "highlight.js": "^9.12.0",
    "http-server": "^0.11.1",
    "immer": "^0.8.4",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "2.0.0-rc.10",
    "ngrx-store-logger": "^0.2.0",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.2",
    "semantic-release": "^15.0.3",
    "travis-deploy-once": "^4.4.0",
    "ts-loader": "3.5.0",
    "ts-node": "~4.1.0",
    "tsickle": "^0.26.0",
    "tslint": "~5.9.0",
    "typescript": "~2.7.2",
    "zone.js": "^0.8.14"
  }
}
